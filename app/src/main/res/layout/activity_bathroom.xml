<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Room3">

    <TextView
            android:id="@+id/lightningTextView2"
            android:layout_width="162dp"
            android:layout_height="41dp"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Lightning"
            android:textColor="@android:color/black"
            app:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@+id/lightningButton"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>
    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/lightningButton"
            android:layout_width="162dp"
            android:layout_height="120dp"
            android:layout_gravity=""
            android:background="@android:color/white"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/lightning"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/myHome" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            app:layout_constraintHorizontal_bias="0.429" app:layout_constraintEnd_toEndOf="parent"/>
    <ToggleButton
            android:layout_width="131dp"
            android:layout_height="28dp"
            android:id="@+id/light1TB"
            android:background="#F4F5F7" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lightningTextView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
            app:layout_constraintHorizontal_bias="0.406" app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
            android:id="@+id/room1TV"
            android:layout_width="175dp"
            android:layout_height="138dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/circleView"
                android:layout_width="175dp"
                android:layout_height="139dp"
                app:srcCompat="@drawable/circle"
                tools:layout_editor_absoluteX="107dp"
                tools:layout_editor_absoluteY="0dp"/>

    </FrameLayout>

    <FrameLayout
            android:layout_width="83dp"
            android:layout_height="83dp"
            app:layout_constraintBottom_toBottomOf="@+id/room1TV"
            app:layout_constraintEnd_toEndOf="@+id/room1TV"
            app:layout_constraintStart_toStartOf="@+id/room1TV"
            app:layout_constraintTop_toTopOf="@+id/room1TV">

        <ImageView
                android:id="@+id/iconView"
                android:layout_width="83dp"
                android:layout_height="84dp"
                app:srcCompat="@drawable/bathroom"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="26dp"/>
    </FrameLayout>

    <TextView
            android:id="@+id/myHome"
            android:layout_width="103dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Bathroom"
            android:textColor="@android:color/black"
            android:textSize="23sp"
            app:fontFamily="@font/roboto_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room1TV"/>

</android.support.constraint.ConstraintLayout>