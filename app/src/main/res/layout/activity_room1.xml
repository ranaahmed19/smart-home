<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Room1" android:id="@+id/light1RB">
    <ToggleButton
            android:layout_width="145dp"
            android:layout_height="106dp"
            android:id="@+id/light1TB"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/light1TV"
            app:layout_constraintVertical_bias="0.189" app:layout_constraintHorizontal_bias="0.387"/>
    <TextView
            android:text="Light"
            android:layout_width="128dp"
            android:layout_height="108dp"
            android:id="@+id/light1TV"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="30sp"
            android:textStyle="bold" android:gravity="fill_vertical"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Room 1"
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.013"
            android:textStyle="bold" android:textSize="40sp" android:gravity="fill_vertical"/>
</android.support.constraint.ConstraintLayout>